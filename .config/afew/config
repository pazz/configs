[Filter.6]
query = 'pa-meetings or subject:"[PA]"'
tags = +PA
message = process algebra list
[Filter.7]
query = 'folder:uoe/Call4Papers'
tags = +C4P -inbox -new
message = call for papers
[Filter.8]
